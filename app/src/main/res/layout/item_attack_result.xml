<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    app:cardCornerRadius="6dp"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_bold"
            android:text="WINDOWS"
            android:layout_marginStart="6dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvManufacturer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Manufacturer"
            android:textColor="@color/eerie_black"
            android:textSize="13sp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvDate"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            android:fontFamily="@font/gilroy_regular"/>

        <!-- Expandable Layout -->
        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/tvManufacturer"
            app:layout_constraintStart_toStartOf="@id/tvManufacturer"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Model"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNumberOfProcessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Number of Processors"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvTotalPhysicalMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Total Physical Memory"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvDiskModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Disk Model"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvDiskSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Disk Size"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <!-- Network Info -->
            <TextView
                android:id="@+id/tvNetworkDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 1 Description"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNetworkIPAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 1 IP Address"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNetworkMACAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 1 MAC Address"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNetworkDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 2 Description"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNetworkIPAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 2 IP Address"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvNetworkMACAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Network 2 MAC Address"
                android:textColor="@color/eerie_black"
                android:visibility="gone"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <!-- OS Info -->
            <TextView
                android:id="@+id/tvOsCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="OS Caption"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>

            <TextView
                android:id="@+id/tvOsVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="OS Version"
                android:textColor="@color/eerie_black"
                android:textSize="13sp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvDate"
                android:fontFamily="@font/gilroy_regular"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
