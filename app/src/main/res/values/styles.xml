<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Helium.UserDetail.View.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/charcoal</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/blue_green</item>
    </style>

    <style name="Helium.TabLayout.CustomTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Helium.TabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/eerie_black</item>
        <item name="tabIndicatorColor">@color/blue_green</item>
        <item name="tabSelectedTextColor">@color/blue_green</item>
        <item name="tabTextColor">@color/cadet_grey</item>
        <item name="tabTextAppearance">@style/Helium.TabLayout.CustomTab</item>
    </style>

    <style name="Helium.Material3.PasswordEditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="cornerRadius">19dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:lines">1</item>
        <item name="android:padding">19dp</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textColorHint">@color/cadet_grey</item>
    </style>

    <style name="Helium.Base.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Helium.Base.TextView.ProfileTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="Helium.Base.TextView.ProfileAbout" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="Helium.Base.Textview.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Helium.Base.Textview.ShowMoreOrLess" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pacific_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Helium.ProfileImageView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Helium.PostImageView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">13dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


</resources>