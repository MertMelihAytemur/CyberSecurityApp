<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedMaterialButton" parent="Helium.Material3.Button">
        <item name="android:textColor">@color/blue_green</item>
        <item name="backgroundTint">@color/eerie_black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">@dimen/padding_19dp</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="fontFamily">@font/gilroy_extra_bold</item>
        <item name="strokeColor">@color/blue_green</item>
    </style>

    <style name="BlueGreenMaterialButton" parent="Helium.Material3.Button">
        <item name="android:background">@drawable/bg_button_selector</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Helium.UserDetail.View.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/charcoal</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/blue_green</item>
    </style>

    <style name="SetupDetailFollowButton" parent="Helium.Material3.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CharcaolMaterialButton" parent="Helium.Material3.Button">
        <item name="backgroundTint">@color/charcoal</item>
        <item name="android:textColor">@color/blue_green</item>
    </style>

    <style name="OrangeMaterialButton" parent="Helium.Material3.Button">
        <item name="backgroundTint">@color/tart_orange</item>
        <item name="android:textColor">@color/ghost_white</item>
    </style>

    <style name="Helium.Material3.Button" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:padding">@dimen/padding_16dp</item>
    </style>

    <style name="Helium.Material3.EditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="android:background">@drawable/bg_edittext_selector</item>
        <item name="android:padding">@dimen/padding_19dp</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textColorHint">@color/cadet_grey</item>
    </style>

    <style name="Helium.Material3.EditText.MultiLine" parent="Helium.Material3.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">200</item>
    </style>

    <style name="Helium.Material3.EditText.SingleLine" parent="Helium.Material3.EditText">
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="Helium.TabLayout.CustomTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Helium.TabLayout" parent="Widget.Design.TabLayout">
        <item name="background">@color/eerie_black</item>
        <item name="tabIndicatorColor">@color/blue_green</item>
        <item name="tabSelectedTextColor">@color/blue_green</item>
        <item name="tabTextColor">@color/cadet_grey</item>
        <item name="tabTextAppearance">@style/Helium.TabLayout.CustomTab</item>
    </style>

    <style name="Helium.Material3.PasswordEditText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="cornerRadius">@dimen/radius_16dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:lines">1</item>
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:background">@drawable/bg_edittext_selector</item>
        <item name="android:padding">@dimen/padding_19dp</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textColorHint">@color/cadet_grey</item>
    </style>

    <style name="Helium.Base.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Helium.Base.TextView.ProfileTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="Helium.Base.TextView.ProfileAbout" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:textSize">@dimen/textsize_12sp</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
    </style>

    <style name="Helium.Base.Textview.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">@dimen/textsize_24sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Helium.Base.Textview.ShowMoreOrLess" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/pacific_blue</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
    </style>

    <style name="Helium.Base.Textview.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:lineSpacingExtra">@dimen/textsize_5sp</item>
    </style>

    <style name="Helium.Base.Textview.ProfileLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/cadet_grey</item>
        <item name="android:fontFamily">@font/gilroy_extra_bold</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:lineSpacingExtra">@dimen/textsize_5sp</item>
    </style>

    <style name="Helium.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:editTextColor">@color/cadet_grey</item>
        <item name="android:textColorHint">@color/cadet_grey</item>
    </style>

    <style name="Helium.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginEnd">@dimen/margin_12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_12sp</item>
        <item name="android:paddingStart">@dimen/padding_16dp</item>
        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:paddingTop">@dimen/padding_12dp</item>
        <item name="android:paddingBottom">@dimen/padding_12dp</item>
        <item name="android:textColor">@color/ghost_white</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:background">@drawable/bg_city_selection</item>
    </style>

    <style name="Helium.ProfileImageView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Helium.PostImageView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">13dp</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Helium.Base.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_8dp</item>
    </style>

    <style name="Helium.Base.RoundedProfileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_12dp</item>
    </style>

    <style name="Helium.Base.CircleProfileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Helium.Follow.ProfileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_50percent</item>
    </style>

    <style name="Helium.Base.TextView.Profile.UserProperties" parent="Helium.Base.Textview.ProfileLabel">
        <item name="android:gravity">center</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="Helium.Base.TextView.Profile.UserProperties.Count" parent="Helium.Base.TextView.Profile.UserProperties">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
    </style>

    <style name="Helium.Base.TextInputLayout.Password" parent="">
        <item name="hintEnabled">false</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/cadet_grey</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Helium.Base.TextInputLayout.SingleLine" parent="">
        <item name="hintEnabled">false</item>
        <item name="android:maxLength">50</item>
        <item name="boxBackgroundMode">none</item>
    </style>

</resources>